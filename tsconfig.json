{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true
    },

    "include": ["src/**/.ts", "src/**/*.tsx", "src/**/*.jsx", "src/lib/lazyLoad.ts"],
    "exclude": ["node_modules"]
}